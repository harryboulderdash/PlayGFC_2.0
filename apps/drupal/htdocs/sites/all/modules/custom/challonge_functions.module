function gfc_session($key, $value = NULL) {
    static $storage;
    if ($value) {
        $storage[$key] = $value ;
        $_SESSION['gfc'][$key] = $value ;   // I use 'lists' in case some other module uses 'type' in $_SESSION
    }
    else if (empty($storage[$key]) && isset($_SESSION['gfc'][$key])) {
        $storage[$key] = $_SESSION['gfc'][$key];
    }
    return $storage[$key];


